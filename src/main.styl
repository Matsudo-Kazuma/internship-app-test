.relative-container
  position relative
  width 100%
  height 100%
  .absolute-container
    position: absolute
    top 0
    left 0
    width 100%
    height auto

.selectable-row
  padding 8px 0
  cursor pointer
  &:hover
    background-color #eee

.full-width
  width 100%

h1 {
  position: relative;
  display: inline-block;
  padding: 0 55px;
}

h1:before, h1:after {
  content: '';
  position: absolute;
  top: 50%;
  display: inline-block;
  width: 45px;
  height: 1px;
  background-color: black;
}

h1:before {
  left:0;
}
h1:after {
  right: 0;
}